;----------------------------------------------------------------------------
; Enable IPv6
;----------------------------------------------------------------------------
[HKEY_LOCAL_MACHINE\Comm\Tcpip6\Parms]
    "EnableDHCPv6"          =dword:1
    "DisabledComponents"    =dword:0

;-------------------------------------------------------------------------------
; ICMPv6 rules for IPv6
;-------------------------------------------------------------------------------
;-------------------------------------------------------------------------------
; Allow ICMPv6 Type 128 to enable 'Echo Request' messages
;-------------------------------------------------------------------------------
[HKEY_LOCAL_MACHINE\SOFTWARE\Beckhoff\CxConfig\Firewall\Rules\AllowIcmpV6Type128]
    "Description"   ="Echo Request"
    "Verbose"       ="Allow ICMPv6 type 128, code 0 "
    "Type"          =dword:00000080
    "Code"          =dword:00000000
    "Protocol"      =dword:0000003A
    "Mask"          =dword:00000040
    "Flags"         =dword:00000000

;-------------------------------------------------------------------------------
; Allow ICMPv6 Type 133 to enable 'Router Solicitation' (NDP)
;-------------------------------------------------------------------------------
[HKEY_LOCAL_MACHINE\SOFTWARE\Beckhoff\CxConfig\Firewall\Rules\AllowIcmpV6Type133]
    "Description"   ="Router Solicitation"
    "Verbose"       ="Allow ICMPv6 type 133, code 0"
    "Type"          =dword:00000085
    "Code"          =dword:00000000
    "Protocol"      =dword:0000003A
    "Mask"          =dword:00000040
    "Flags"         =dword:00000000

;-------------------------------------------------------------------------------
; Allow ICMPv6 Type 134 to enable 'Router Advertisement' (NDP)
;-------------------------------------------------------------------------------
[HKEY_LOCAL_MACHINE\SOFTWARE\Beckhoff\CxConfig\Firewall\Rules\AllowIcmpV6Type134]
    "Description"   ="Router Advertisement"
    "Verbose"       ="Allow ICMPv6 type 134, code 0"
    "Type"          =dword:00000086
    "Code"          =dword:00000000
    "Protocol"      =dword:0000003A
    "Mask"          =dword:00000040
    "Flags"         =dword:00000000

;-------------------------------------------------------------------------------
; Allow ICMPv6 Type 135 to enable 'Neighbor Solicitation' (NDP)
;-------------------------------------------------------------------------------
[HKEY_LOCAL_MACHINE\SOFTWARE\Beckhoff\CxConfig\Firewall\Rules\AllowIcmpV6Type135]
    "Description"   ="Neighbor Solicitation"
    "Verbose"       ="Allow ICMPv6 type 135, code 0"
    "Type"          =dword:00000087
    "Code"          =dword:00000000
    "Protocol"      =dword:0000003A
    "Mask"          =dword:00000040
    "Flags"         =dword:00000000

;-------------------------------------------------------------------------------
; Allow ICMPv6 Type 136 to enable 'Neighbor Advertisement' (NDP)
;-------------------------------------------------------------------------------
[HKEY_LOCAL_MACHINE\SOFTWARE\Beckhoff\CxConfig\Firewall\Rules\AllowIcmpV6Type136]
    "Description"   ="Neighbor Advertisement"
    "Verbose"       ="Allow ICMPv6 type 136, code 0"
    "Type"          =dword:00000088
    "Code"          =dword:00000000
    "Protocol"      =dword:0000003A
    "Mask"          =dword:00000040
    "Flags"         =dword:00000000
